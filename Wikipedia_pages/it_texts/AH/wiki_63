{"id": "724288", "revid": "479409", "url": "https://it.wikipedia.org/wiki?curid=724288", "title": "ETR 250", "text": ""}
{"id": "724291", "revid": "642594", "url": "https://it.wikipedia.org/wiki?curid=724291", "title": "ETR401", "text": ""}
{"id": "724292", "revid": "479409", "url": "https://it.wikipedia.org/wiki?curid=724292", "title": "ETR450", "text": ""}
